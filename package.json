{
  "name": "latest-ts-setup-2021",
  "version": "0.1.0",
  "private": false,
  "description": "Latest setup for Babel 7 + TypeScript + Webpack 5 in 2021",
  "main": "public/index.js",
  "scripts": {
    "prettier": "prettier -w \"*.*\" \"**/*.(js|jsx|ts|tsx)\"",
    "dev": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "ts:watch": "babel src --out-dir build --extensions '.ts' --watch",
    "ts:build": "babel src --out-dir build --extensions '.ts'"
  },
  "repository": "https://github.com/minagawah/latest-ts-setup-2021.git",
  "keywords": [
    "babel",
    "typescript"
  ],
  "author": "minagawah <minag@tokyo800.jp>",
  "license": "(Unlicense OR MIT)",
  "bugs": {
    "url": "https://github.com/minagawah/latest-ts-setup-2021/issues"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.1.0",
    "css-loader": "^6.5.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "html-webpack-plugin": "^5.5.0",
    "license-webpack-plugin": "^4.0.0",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
